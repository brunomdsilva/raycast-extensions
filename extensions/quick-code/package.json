{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-code",
  "title": "Quick Code",
  "description": "Quick access and manage your development projects",
  "icon": "extension-icon.png",
  "author": "bruno",
  "categories": ["Developer Tools", "Productivity"],
  "license": "MIT",
  "platforms": ["macOS"],
  "commands": [
    {
      "name": "manage-projects",
      "title": "Manage Projects",
      "description": "List and manage your development projects",
      "mode": "view"
    },
    {
      "name": "create-project",
      "title": "Create Project",
      "description": "Create a new project folder",
      "mode": "view"
    },
    {
      "name": "manage-paths",
      "title": "Manage Paths",
      "description": "Add or remove project paths",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "mainEditor",
      "type": "appPicker",
      "title": "Main Editor",
      "description": "The editor to open projects with",
      "required": false
    },
    {
      "name": "mainTerminal",
      "type": "appPicker",
      "title": "Main Terminal",
      "description": "The terminal to open projects with",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.0",
    "@raycast/utils": "^1.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "22.13.0",
    "@types/react": "19.0.8",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
